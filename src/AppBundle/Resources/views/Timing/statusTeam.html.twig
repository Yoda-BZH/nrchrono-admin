
{% block body -%}

{# previous racers #}
{% for p in previous %}
<td class="col-md-1">
{%- if p -%}
<ul class="list-unstyled">
    <li>{{ p.idRacer.nickname }}
        <button
            id="previous-team-{{ team.id }}-pos-{{ loop.index }}"
            class="btn btn-default btn-xs previous-changer"
            data-type="timing"
            data-racer-id="{{ p.idRacer.id }}"
            data-team-id="{{ team.id }}"
            data-timing="{{ p.id }}"><span class="glyphicon glyphicon-refresh"></span></button>
    </li>
    <li>Arrived: {{ p.clock|date('H:i:s') }}</li>
    <li>Lap: {{ p.timing|date('H:i:s') }}</li>
</ul>
{%- else -%}
    --
{%- endif -%}
</td>
{% endfor %}

{# separator #}
<td id="separator-{{ team.id }}" class="col-md-1 team-bg-color-{{ team.id }} timing-separator">
<p>{{ team.name }}</p>
</td>

{# next racers #}
{% for racer in racers %}
<td class="col-md-1">
<ul class="list-unstyled">
    <li>
    {{ racer.nickname }}
    <button
        id="prediction-team-{{ team.id }}-pos-{{ loop.index }}"
        class="btn btn-default btn-xs prediction-changer"
        data-type="prediction"
        data-racer-id="{{ racer.id }}"
        data-team-id="{{ team.id }}"
        data-prediction-pos="{{ loop.index }}"><span class="glyphicon glyphicon-refresh"></span></button>
{% if 0 == loop.index0 %}
    <button
        id="manual-team-{{ team.id }}"
        class="btn btn-warning btn-xs add-manual"
        data-type="manual"
        data-racer-id="{{ racer.id }}"
        data-team-id="{{ team.id }}"><span class="glyphicon glyphicon-play-circle"></span></button>
{% endif %}
    </li>
    {% if loop.index0 == 0 %}
    <li>Arriv√©e: {{ arrival|date('H:i:s') }}</li>
    {#<li>delta: {{ delta.format('%R %H:%I:%S') }}</li>#}
    <li
            data-arrival="{{ arrival|date('c') }}"
            class="clock"
            id="clock-team-{{ team.id }}"
        ></li>
    {% endif %}
</ul>
</td>
{% endfor %}


{% endblock %}


























