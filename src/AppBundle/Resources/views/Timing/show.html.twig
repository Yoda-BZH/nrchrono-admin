{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Timing</h1>

    <table class="record_properties table table-condensed table-stripped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Timing</th>
                <td>{{ entity.timing|date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Isrelay</th>
                <td>{{ entity.isRelay }}</td>
            </tr>
            <tr>
                <th>Clock</th>
                <td>{{ entity.clock|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>IdRacer</th>
                <td><a href="{{ path('racer_show', { 'id': entity.idRacer.id }) }}">{{ entity.idRacer.nickname }}</a></td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('timing') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('timing_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
