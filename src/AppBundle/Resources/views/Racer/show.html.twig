{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Racer</h1>

    <table class="record_properties table table-condensed table-stripped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ entity.nickname }}</td>
            </tr>
            <tr>
                <th>Pause</th>
                <td>{{ entity.paused ? "En pause" : "Pas en pause" }}</td>
            </tr>
            <tr>
                <th>Timingmin</th>
                <td>{{ entity.timingMin|date('i:s') }}</td>
            </tr>
            <tr>
                <th>Timingmax</th>
                <td>{{ entity.timingMax|date('i:s') }}</td>
            </tr>
            <tr>
                <th>Timingavg</th>
                <td>{{ entity.timingAvg|date('i:s') }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('racer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('racer_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
