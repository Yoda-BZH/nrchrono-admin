{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Team list</h1>

    <table class="records_list table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nb Heure Pause</th>
                <th>Nb Personnes</th>
                <th>ID Reference</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.nbHeurePause }}</td>
                <td>{{ entity.nbPerson }}</td>
                <td>{{ entity.idReference }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('team_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('team_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('team_new') }}">
                Créer une nouvelle équipe
            </a>
        </li>
    </ul>
    {% endblock %}
