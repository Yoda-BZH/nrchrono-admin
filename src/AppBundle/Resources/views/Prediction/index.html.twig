{% extends '::base.html.twig' %}

{% block body -%}

<table class="table table-hover table-stripped table-condensed">
    <thead>
        <th>ID</th>
        <th>position</th>
        <th>firstname</th>
        <th>lastname</th>
        <th>nickname</th>
        <th>Estimated hour</th>
    </thead>
    <tbody>
        {% for racerData in racersEndOfRotation %}
        <tr>
            <td>{{ racerData.racer.id }}</td>
            <td>{{ racerData.racer.position }}</td>
            <td>{{ racerData.racer.firstname }}</td>
            <td>{{ racerData.racer.lastname }}</td>
            <td>{{ racerData.racer.nickname }}</td>
            <td>{{ racerData.hour }}</td>
        </tr>
        {% endfor %}
        <tr>
            <td colspan="6">
                <hr />
            </td>
        </tr>
        {% for racerData in nextRacers %}
        <tr>
            <td><a href="{{ path('racer_show', { 'id': racerData.racer.id }) }}">{{ racerData.racer.id }}</a></td>
            <td><a href="{{ path('racer_show', { 'id': racerData.racer.id }) }}">{{ racerData.racer.position }}</a></td>
            <td><a href="{{ path('racer_show', { 'id': racerData.racer.id }) }}">{{ racerData.racer.firstname }}</a></td>
            <td><a href="{{ path('racer_show', { 'id': racerData.racer.id }) }}">{{ racerData.racer.lastname }}</a></td>
            <td><a href="{{ path('racer_show', { 'id': racerData.racer.id }) }}">{{ racerData.racer.nickname }}</a></td>
            <td>{{ racerData.hour }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
