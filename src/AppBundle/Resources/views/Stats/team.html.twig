{% extends "::base.html.twig" %}

{% block body %}


<div id="chart" width="400" height="400"></div>

{% endblock %}


{% block javascripts %}
<script src="{{ asset('highcharts/js/highcharts.js') }}"></script>
<script src="{{ asset('highcharts/js/themes/gray.js') }}"></script>
<script>
$(document).ready(function() {
    chart = $('#chart');
    options = {
        chart: {
            type: 'spline',
        },
        title: {
            text: "Chronos de {{ team.name }}",
        },
        xAxis: {
            title: {
                text: "Heure"
            },
            type: "datetime",
        },
        yAxis: {
            title: {
                text: 'Temps au tour'
            },
            //type: "datetime",
            {#//min: Date.parse("{{ timings[0].createdAt|date('Y-m-d H:i:s') }}"),#}
            min: 0,
            tickInterval: 30,
            labels: {
                formatter: function() {
                    nbSeconds = this.value;
                    minutes = parseInt(nbSeconds / 60);
                    seconds = nbSeconds % 60;
                    //return minutes + " min " + seconds + " secondes";
                    return sprintf('%02d:%02d', minutes,  seconds);
                }
            },
            dateTimeLabelFormats: {
                millisecond: '%H:%M:%S',
                second:      '%H:%M:%S',
                minute:      '%H:%M:%S',
                hour:        '%H:%M:%S',
                day:         '%H:%M:%S',
                week:        '%H:%M:%S',
                month:       '%H:%M:%S',
            }
        },

        plotOptions: {
            spline: {
                marker: {
                    enabled: true
                }
            }
        },

        series: [
{
{% for teamId, timingData in timings %}
    name: "{{ timingData[0].idRacer.firstname }} {{ timingData[0].idRacer.lastname }}",
    data:
        [
{% for timing in timingData %}
            [
                Date.parse("{{ timing.createdAt|date('Y-m-d H:i:s') }}"),
                {{ timing.timingToSec }}
            ],
{% endfor %}
        ]
{% if not loop.last %}
},{
{% endif %}
{% endfor %}
        }]
    };
    chart.highcharts(options);
});
</script>
{% endblock %}
