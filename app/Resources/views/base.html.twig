<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Gestion des relais{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
{% if app.session.get('theme') %}
        <link rel="stylesheet" type="text/css" href="{{ asset(app.session.get('theme')) }}">
{% endif %}

{% stylesheets
    'bundles/datatables-fixedcolumns/css/dataTables.fixedColumns.min.css'
    'bundles/datatables-fixedheader/css/dataTables.fixedHeader.min.css'
    'bundles/KeyTable-1.2.1/css/dataTables.keyTable.css'
    'bundles/app/css/app.css'
    'teams.css'
%}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}

{#
    those files must not be in the stylesheet function,
    as relative files won't work, resulting in glitches
#}

    <link rel="stylesheet" href="{{ asset('bundles/datatables/css/jquery.dataTables.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/bmatznerjqueryui/css/smoothness/jquery-ui.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/bmatznerjqueryui/css/smoothness/jquery.ui.theme.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bootstrap/css/bootstrap.css') }}">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div id="menu">
            <ul class="nav nav-tabs">
                <li><a href="{{ path('homepage') }}">Index</a></li>
                <li><a href="{{ path('timing_status') }}">Timing Status</a></li>
                <li><a href="{{ path('ranking') }}">Ranking</a></li>
                <li><a href="{{ path('css_list') }}">Theme</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"
                        role="button" aria-expanded="false">
                        Admin <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('racer') }}">Racer</a></li>
                        <li><a href="{{ path('team') }}">Team</a></li>
                        <li><a href="{{ path('timing') }}">Timing</a></li>
                        <li><a href="{{ path('racerpause') }}">RacerPause</a></li>
                        <li><a href="{{ path('race') }}">Race</a></li>
                        <li><a href="{{ path('pause') }}">Pause</a></li>
                        <li><a href="{{ path('ranking') }}">Ranking</a></li>
                        <li><a href="{{ path('compare_list') }}">Compare</a></li>
                        <li><a href="{{ path('compare_file') }}">FileGen</a></li>
                    </ul>
                </li>
                <li class=""><a href="#" id="generalclock"></a></li>
            </ul>
            </div>
{% block body %}{% endblock %}
        </div> <!-- end row fluid -->
    </div> <!-- container-fluid -->

{% javascripts
    'bundles/jquery-extra/jquery.min.js'
    'bundles/bootstrap/js/bootstrap.min.js'
    'bundles/datatables/js/jquery.dataTables.min.js'
    'bundles/app/js/datatables.js'
    'bundles/app/js/dataTables.bootstrap.js'
    'bundles/datatables-fixedcolumns/js/dataTables.fixedColumns.min.js'
    'bundles/datatables-fixedheader/js/dataTables.fixedHeader.min.js'
    'bundles/KeyTable-1.2.1/js/dataTables.keyTable.min.js'
    'bundles/bmatznerjqueryui/js/minified/jquery-ui.min.js'
    'js/sprintf/dist/sprintf.min.js'
    'jqcountdown/jquery.plugin.min.js'
    'jqcountdown/jquery.countdown.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

    {% block javascripts %}{% endblock %}
<script>
$(document).ready(function() {
    var midnight = new Date();
    midnight.setHours(0, 0, 0, 0);

    $('#generalclock').countdown({
        since: midnight,
        format: 'HMS',
        compact: true
    });
});
</script>

</body>
</html>
