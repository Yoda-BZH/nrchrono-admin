{% extends 'base.html.twig' %}

{% block body -%}
    <h1>Pause</h1>

    <table class="record_properties table table-condensed table-stripped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Porder</th>
                <td>{{ entity.porder }}</td>
            </tr>
            <tr>
                <th>Hourstart</th>
                <td>{{ entity.hourStart|date('H:i') }}</td>
            </tr>
            <tr>
                <th>Hourstop</th>
                <td>{{ entity.hourStop|date('H:i') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pause') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pause_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
