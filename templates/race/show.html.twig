{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ race.start ? race.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Km</th>
                <td>{{ race.km }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('race_index') }}">back to list</a>

    <a href="{{ path('race_edit', {'id': race.id}) }}">edit</a>

    {{ include('race/_delete_form.html.twig') }}
{% endblock %}
