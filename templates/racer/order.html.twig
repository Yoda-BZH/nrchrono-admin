{% extends 'base.html.twig' %}

{% block title %}{% trans %}Racer index{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Racer index{% endtrans %}</h1>

    <table class="table records_list table-condensed table-stripped table-bordered table-hover table-datatable table-reorder">
        <thead>
            <tr>
                <th>{% trans %}Position{% endtrans %}</th>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <th>{% trans %}Nickname{% endtrans %}</th>
            </tr>
        </thead>

        <tbody>
        {% for racer in racers %}
            <tr data-racerid="{{ racer.id }}">
                <td class="racer-position">{{ racer.position }}</td>
                <td class="racer-firstname">{{ racer.firstname }}</td>
                <td class="racer-lastname">{{ racer.lastname }}</td>
                <td class="racer-nickname">{{ racer.nickname }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<input type="hidden" name="teamid" value="{{ racers[0].team.id }}" id="teamid" />
<button type="button" class="btn btn-primary" id="update-list" disabled="disabled">{% trans %}Mettre Ã  jour l'ordre des coureurs{% endtrans %}</button>

{% endblock %}

{% block stylesheets %}
{% include "datatables/css.twig" %}
{% endblock %}
