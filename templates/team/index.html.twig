{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="records_list table table-condensed table-hover table-stripped table-datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NbPerson</th>
                <th>Num√©ro de dossard</th>
                <th>Color</th>
                <th>Guest</th>
                <th>Race</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.nbPerson }}</td>
                <td>{{ team.idReference }}</td>
                <td class="team-color-grad-{{ team.id }}">{{ team.color }}</td>
                <td>{{ team.guest ? 'Yes' : 'No' }}</td>
                <td>{{ team.race }}</td>
                <td>
                    <a href="{{ path('team_show', {'id': team.id}) }}">show</a>
                    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}">Create new</a>
    <a href="{{ path('team_update_colors') }}">Update team colors</a>
{% endblock %}

{% block stylesheets %}
{% include "datatables/css.twig" %}
{% endblock %}
